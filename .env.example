# Pendo Analytics — https://app.pendo.io (free tier, 500 MAU cap)
# Product analytics, behavioral tracking, in-app guides
NEXT_PUBLIC_PENDO_API_KEY=

# OpenAI — https://platform.openai.com
OPENAI_API_KEY=sk-...

# Supabase — https://supabase.com/dashboard
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJ...
SUPABASE_SERVICE_KEY=eyJ...

# LlamaParse — https://cloud.llamaindex.ai (fallback for complex PDFs only)
LLAMAPARSE_API_KEY=llx-...

# Cohere — https://dashboard.cohere.com (for cross-encoder reranking)
COHERE_API_KEY=
USE_CROSS_ENCODER_RERANK=true

# Admin dashboard password
ADMIN_PASSWORD=changeme

# Vercel Cron secret — used to authenticate scheduled cron requests
# Generate with: openssl rand -hex 32
# Set in Vercel Dashboard > Settings > Environment Variables
CRON_SECRET=

# Mock data toggle — Set to "true" to use mock chat responses for testing/demos
# Set to "false" or omit to use real RAG-powered API responses
NEXT_PUBLIC_USE_MOCK_DATA=true
