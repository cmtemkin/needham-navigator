{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:security/recommended-legacy"
  ],
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-console": ["error", {
      "allow": ["warn", "error"]
    }],
    "@typescript-eslint/no-explicit-any": "error",
    "@next/next/no-img-element": "warn"
  }
}
